<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#232323"
    app:strokeColor="#009688"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivItemImagen"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground"
            android:padding="1dp"
            app:shapeAppearanceOverlay="@style/CircleImage"
            app:strokeWidth="1dp"
            app:strokeColor="#50FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivFlecha"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="6dp"
            android:src="@drawable/boton_de_play"
            app:tint="@color/white"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnCola"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="6dp"
            android:src="@android:drawable/ic_menu_add"
            app:tint="#00FFFF"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivFlecha"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvItemNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:text="Song Title"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toEndOf="@+id/ivItemImagen"
            app:layout_constraintEnd_toStartOf="@+id/btnCola"
            app:layout_constraintTop_toTopOf="@+id/ivItemImagen" />

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:scrollbars="none"
            android:overScrollMode="never"
            app:layout_constraintStart_toStartOf="@+id/tvItemNombre"
            app:layout_constraintEnd_toStartOf="@+id/btnCola"
            app:layout_constraintTop_toBottomOf="@+id/tvItemNombre">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvItemTipo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_tipo_chip"
                    android:backgroundTint="#424242"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="3dp"
                    android:layout_marginEnd="8dp"
                    android:text="ARTIST"
                    android:textAllCaps="false"
                    android:textColor="#EEEEEE"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/tvItemTipo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_tipo_chip"
                    android:backgroundTint="#009688"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="3dp"
                    android:layout_marginEnd="8dp"
                    android:text="1.2k"
                    android:textAllCaps="true"
                    android:visibility="visible"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/layoutLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_tipo_chip"
                    android:backgroundTint="#E91E63"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="3dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/megusta"
                        app:tint="#FFFFFF"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:id="@+id/tvItemLikes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="850"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/tvItemId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>