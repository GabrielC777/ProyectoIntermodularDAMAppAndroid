<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="ring"
            android:innerRadiusRatio="3.2"
            android:thicknessRatio="10"
            android:useLevel="false">
            <gradient
                android:type="sweep"
                android:startColor="#0009A8AB"
                android:centerColor="#4000FFCC"
                android:endColor="#0009A8AB"/>
        </shape>
    </item>

    <item android:top="4dp" android:bottom="4dp" android:left="4dp" android:right="4dp">
        <shape android:shape="ring"
            android:innerRadiusRatio="3.2"
            android:thicknessRatio="12"
            android:useLevel="false">
            <gradient
                android:type="sweep"
                android:startColor="#10FFFFFF"
                android:centerColor="#8000FFCC"
                android:endColor="#FF00FFCC"/>
        </shape>
    </item>

    <item android:top="4dp" android:bottom="4dp" android:left="4dp" android:right="4dp">
        <shape android:shape="ring"
            android:innerRadiusRatio="3.2"
            android:thicknessRatio="12"
            android:useLevel="false">
            <stroke android:width="2dp" android:color="#AAFFFFFF"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

    <item android:gravity="top|center_horizontal" android:top="6dp">
        <shape android:shape="oval">
            <size android:height="8dp" android:width="8dp"/>
            <solid android:color="#FFFFFF"/>
            <stroke android:width="1dp" android:color="#00FFFF"/>
        </shape>
    </item>

</layer-list>